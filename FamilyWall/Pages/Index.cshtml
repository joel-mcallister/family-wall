<div id="eventModal" class="modal" tabindex="-1">
    <form asp-page-handler="CalendarUpdate">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="eventTitle" class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="eventDetails">Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <a asp-page="/Index" asp-page-handler="CalendarDelete" id="calDel" class="btn btn-danger">
                        <i class="fa-solid fa-calendar-xmark"></i> Delete
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-floppy-disk"></i> Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div id="eventMaintModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-page-handler="CalendarAdd">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add/Edit Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" type="datetime-local" />
                </div>
                <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="datetime-local" />
                </div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" type="text" />
                </div>
                <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" type="text" />
                </div>
                <div class="mb-3">
                        <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" type="text"/>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                            <input asp-for="AllDay" class="form-check-input" type="checkbox" />
                        <label asp-for="AllDay" class="form-label"></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        </form>
    </div>
</div>