@section Head
{
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css' rel='stylesheet' />
    <style>
        /* Ensure the card is in normal flow and grows with the calendar */
        .calendar-card {
            display: block; /* participate in layout normally */
            height: auto;   /* allow height to be determined by content */
            box-sizing: border-box;
        }

        /* Make the calendar element a normal block that can expand */
        #calendar {
            display: block;
            width: 100%;
            height: auto; /* FullCalendar will set its internal height; keep this auto so parent follows */
            box-sizing: border-box;
            /* Optional initial minimum height so the container doesn't collapse before events load */
            min-height: 200px;
        }
        

        /* If your .card-style sets a fixed height, ensure it doesn't override automatic sizing.
           If it does, you may need to remove or override that rule. */
        .card-style {
            /* Example override: uncomment if necessary
            height: auto !important;
            */
        }

        .icon {
            padding-right: 10px !important;
            align-items: stretch !important;
        }

        .parallax-slider {
            transition: opacity 0.4s ease-in;
            -webkit-transition: opacity 0.4s ease-in;
            -moz-transition: opacity 0.4s ease-in;
            -ms-transition: opacity 0.4s ease-in;
            -o-transition: opacity 0.4s ease-in;
            opacity: 1;
        }

        .transitioning-src {
            transition: opacity 0.4s ease-out;
            -webkit-transition: opacity 0.4s ease-out;
            -moz-transition: opacity 0.4s ease-out;
            -ms-transition: opacity 0.4s ease-out;
            -o-transition: opacity 0.4s ease-out;
            opacity: 0;
        }
    </style>
}

